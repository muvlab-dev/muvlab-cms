{
  "kind": "collectionType",
  "collectionName": "classes",
  "info": {
    "singularName": "class",
    "pluralName": "classes",
    "displayName": "Class"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "thumbnail": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images",
        "files"
      ]
    },
    "theme_color": {
      "type": "string",
      "default": "#000000",
      "required": true,
      "regex": "^#(?:[0-9A-Fa-f]{3}|[0-9A-Fa-f]{6})$"
    },
    "description": {
      "type": "text",
      "required": true
    },
    "order": {
      "type": "integer",
      "required": false
    }
  }
}
